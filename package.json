{
	"name": "action-osls",
	"version": "1.0.7",
	"description": "GitHub Action that installs the osls CLI globally",
	"main": "dist/index.js",
	"type": "commonjs",
	"files": [
		"action.yml",
		"dist"
	],
	"scripts": {
		"build": "ncc build src/index.js -o dist && cp src/osls-cli.js dist/osls_bundle.js && ./scripts/package.sh",
		"lint": "standard src/**/*.js",
		"lint:fix": "standard --fix src/**/*.js",
		"test": "npm run lint"
	},
	"keywords": [
		"github-action",
		"osls",
		"serverless",
		"deployment"
	],
	"author": "Daniel Santana",
	"license": "MIT",
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@actions/core": "^2.0.1",
		"@actions/exec": "^2.0.0",
		"osls": "^3.61",
		"punycode": "^2.3.1"
	},
	"devDependencies": {
		"@vercel/ncc": "^0.38.4",
		"esbuild": "^0.27.1",
		"standard": "^17.1.2"
	},
	"standard": {
		"ignore": [
			"dist"
		]
	}
}
