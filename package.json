{
	"name": "action-osls",
	"version": "1.2.0",
	"description": "GitHub Action that installs the osls CLI globally",
	"main": "dist/index.js",
	"type": "commonjs",
	"files": [
		"action.yml",
		"dist"
	],
	"scripts": {
		"build": "npm run -s build:esbuild",
		"build:ncc": "npm run -s bundle:ncc && npm run -s package:osls:cjs",
		"build:esbuild": "npm run -s bundle:esbuild && npm run -s package:osls:cjs",
		"bundle:ncc": "ncc build src/index.js -o dist --minify",
		"bundle:esbuild": "esbuild src/index.js --bundle --minify --platform=node --target=node18 --outfile=dist/index.js",
		"lint": "standard src/**/*.js",
		"lint:fix": "standard --fix src/**/*.js",
		"package:osls:cjs": "cp src/osls-cli.js dist/osls_bundle.js && ./scripts/package.sh",
		"package:osls:esm": "cp src/osls-cli.mjs dist/osls_bundle.mjs && ./scripts/package.sh",
		"test:dist": "node scripts/smoke-test-dist.mjs",
		"test": "npm run lint"
	},
	"keywords": [
		"github-action",
		"osls",
		"serverless",
		"deployment"
	],
	"author": "Daniel Santana",
	"license": "MIT",
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@actions/core": "^2.0.2",
		"@actions/exec": "^2.0.0",
		"osls": "^3.61",
		"punycode": "^2.3.1"
	},
	"devDependencies": {
		"@vercel/ncc": "^0.38.4",
		"esbuild": "^0.27.2",
		"standard": "^17.1.2"
	},
	"standard": {
		"ignore": [
			"dist"
		]
	}
}
