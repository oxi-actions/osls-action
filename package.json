{
	"name": "action-osls",
	"version": "0.2.1",
	"description": "GitHub Action that installs the osls CLI globally",
	"main": "dist/index.js",
	"type": "commonjs",
	"files": [
		"action.yml",
		"dist"
	],
	"scripts": {
		"build": "ncc build src/index.js -o dist && esbuild src/osls-cli.js --bundle --platform=node --outfile=dist/osls_bundle.js",
		"lint": "standard src/**/*.js",
		"lint:fix": "standard --fix src/**/*.js",
		"test": "npm run lint"
	},
	"keywords": [
		"github-action",
		"osls",
		"serverless",
		"deployment"
	],
	"author": "Daniel Santana",
	"license": "MIT",
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@actions/core": "^1.11.1",
		"@actions/exec": "^1.1.1",
		"osls": "^3.59.3"
	},
	"devDependencies": {
		"@vercel/ncc": "^0.38.4",
		"esbuild": "^0.24.0",
		"standard": "^17.1.2"
	},
	"standard": {
		"ignore": [
			"dist"
		]
	}
}
